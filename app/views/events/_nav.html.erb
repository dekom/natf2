<span style="float:left;">
  <% if current_controller == 'events' %>
    <%= link_to I18n.l( @date, :format => :ed_month), events_path %>
  <% else %>
    <%= link_to I18n.t(:events), events_path %>
  <% end %>
</span>
<span class="calendar-nav" style="float:right;">
  <%= link_to ('&laquo; '+I18n.t(:prev)).html_safe, events_path(:params => {:date => @date.prev_month.strftime("%Y-%m") + '-01'}) %>&nbsp;
  <%= link_to I18n.t(:today), events_path %>&nbsp;
  <%= link_to (I18n.t(:next)+' &raquo;').html_safe, events_path(:params => {:date => @date.next_month.strftime("%Y-%m") + '-01'}) %>
</span>
